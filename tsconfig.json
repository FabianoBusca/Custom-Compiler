{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*",
    "tests/**/*"
  ],
  "exclude": ["node_modules"]
}
